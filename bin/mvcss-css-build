#!/usr/bin/env bash
# ****************************************************
#
#   MVCSS CSS Build
#   -> Pulls down and the MVCSS CSS build and copies to clipboard
#
# ----------------------------------------------------
#   Dependencies
# ----------------------------------------------------
#
#  - bash-comment
#
# ****************************************************

set -o errexit
set -o nounset
set -o pipefail

# ----------------------------------------------------
#   Variables
# ----------------------------------------------------

MVCSSURL='https://raw.githubusercontent.com/mvcss/mvcss/master'

# ----------------------------------------------------
#   Main
# ----------------------------------------------------

if [[ "$1" == 'min' ]]
then
  bash-comment s "Copying 'application.min.css' to the clipboard..."
  curl -s "$MVCSSURL"/_build/css/application.min.css | pbcopy
  bash-comment s "Copied!"
else
  bash-comment s "Copying 'application.css' to the clipboard..."
  curl -s "$MVCSSURL"/_build/css/application.css | pbcopy
  bash-comment s "Copied!"
fi
