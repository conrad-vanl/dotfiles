[include]

  path = ~/.gitconfig.local

[color]

  ui = true

[color "branch"]

  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]

  meta = yellow bold
  frag = magenta bold # line info
  old = red # deletions
  new = green # additions

[color "status"]

  added = yellow
  changed = green
  untracked = cyan

[core]

  editor = vim
  excludesfile = ~/.gitignore
  quotepath = false

[merge]

  tool = opendiff

[diff]

  tool = vimdiff

[difftool]

  prompt = false

[push]

  default = simple
