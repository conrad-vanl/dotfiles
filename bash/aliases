## ----- Unix ----- ##

# Via https://github.com/mathiasbynens/dotfiles/blob/master/.aliases
# Detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag="--color"
else # OS X `ls`
  colorflag="-G"
fi

# Listing
alias l='ls -lF ${colorflag}'
alias la='ls -laF ${colorflag}'
alias ld="ls -lF ${colorflag} | grep --color=never '^d'"

alias ..='cd ..'
alias rmd='rm -rf'
alias sbp='source ~/.bash_profile'
alias todos="ack -i '(TODO|FIX(ME)|NOTE?):'"
alias magic-numbers="ack -i '(FIXME: Magic number!)'" # `| wc -l` to get the count
alias rmorig='find . -name *.orig -delete'
alias p='less'

## ----- Vim ----- ##

# Disable C-s in terminal
alias vim="stty stop '' -ixoff ; vim"

alias v='vim'
alias vi='vim'

