# Git Aliases
alias g='git'
alias ga='git add'
alias gac='git add . && git commit'
alias gacv='git add . && git commit --verbose'
alias gb='git branch'
alias gc='git commit'
alias gcam='git commit -a -m'
alias gcm='git commit -m'
alias gcv='git commit --verbose'
alias gd='git diff'
alias gds='git diff --staged'
alias gdt='git difftool'
alias gfb='git checkout -b'
alias gg='git log --graph --pretty=format:"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset" --abbrev-commit --date=relative'
alias ggo='git log --oneline --stat'
alias gh='git show'
alias gl='git pull'
alias glr='git pull --rebase'
alias go='git checkout'
alias gm='git merge'
alias gmff='git merge --no-ff'
alias grpd='git remote prune origin --dry-run'
alias grp='git remote prune origin'
alias gp='git push'
alias gptb='git push -u origin'
alias gpo='git push origin'
alias gpom='git push origin master'
alias gpp='git pull --rebase && git push'
alias gs='git status'
alias gst='git stash save'
alias gsth='git stash show'
alias gstp='git stash pop'
alias gt='git tag'
alias gui='git update-index --assume-unchanged'

# Vim
alias v='vim'
alias vi='vim'

# Drew's Brew
alias drew='brew'

# Bundle Exec
alias be='bundle exec'

# Rails
alias br='./bin/rails'

# Rake
alias bk='./bin/rake'
alias rkd='rake deploy'
alias rkds='rake deploy:staging'
alias rkdp='rake deploy:production'

# Middleman
alias mib='./bin/middleman build'
alias mis='./bin/middleman s'

# Disable C-s in terminal
alias vim="stty stop '' -ixoff ; vim"

# Unix
alias ll='ls -la'

# Redis
alias rs='redis-server /usr/local/etc/redis.conf'

# Quick Jumps
alias code='cd ~/Code/'

# Quick Files
alias scratch='vim ~/Dropbox\ \(Personal\)/Notes/notes-scratch.txt'
