# ----------------------------------------------------
#   Color
# ----------------------------------------------------

--color
--color-filename=green
--color-lineno=white
--color-match=blue

# ----------------------------------------------------
#   Pager
# ----------------------------------------------------

--pager=less -FRSX

# ----------------------------------------------------
#   Filetypes
# ----------------------------------------------------

--type-add=html=.haml
--type-add=ruby=.haml
--type-set=coffee=.coffee
--type-set=haml=.haml

# ----------------------------------------------------
#   Ignores
# ----------------------------------------------------

# ----- Filetypes ----- #

--nocss

# ----- Directories ----- #

--ignore-dir=.sass-cache
--ignore-dir=bower_components
--ignore-dir=build
--ignore-dir=bundle
--ignore-dir=log
--ignore-dir=node_modules
--ignore-dir=tmp

# ----------------------------------------------------
#   Search
# ----------------------------------------------------

# Ignore case in lowercase searches
--smart-case
