// Place your settings in this file to overwrite the default settings
{
  "javascript.validate.enable": false,
  // "typescript.tsdk": "/Users/conrad/.nvm/versions/node/v8.11.2/lib/node_modules/typescript/lib",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  "files.trimTrailingWhitespace": true,
  "editor.fontSize": 14,
  "search.exclude": {
    "**/node_modules": false
  },
  "window.zoomLevel": 1,
  "jest.pathToJest": "npm run test -- -- ",
  "editor.fontFamily": "Operator Mono, Inconsolata, Menlo, Monaco, 'Courier New', monospace",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic",
          "color": "#76726E"
        }
      },
      {
        "scope": "entity.other.attribute-name",
        "settings": {
          "fontStyle": "italic",
          "color": "#76726E"
        }
      }
    ]
  },
  "color-highlight.markerType": "dot",
  "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
  "eslint.packageManager": "yarn",

  "breadcrumbs.enabled": true,
  "editor.cursorStyle": "line",
  "editor.fontLigatures": true,
  "editor.lineHeight": 22,
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "editor.renderIndentGuides": true,
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "onlySnippets",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.sass-cache": true,
    "**/.bundle": true
  },
  "files.insertFinalNewline": false,
  "files.trimFinalNewlines": true,
  "git.allowForcePush": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.inputValidation": "warn",
  "git.rebaseWhenSync": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "prettier.disableLanguages": ["vue", "markdown"],
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.fontFamily": "Operator Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.lineHeight": 1.4,
  "terminal.integrated.shellArgs.osx": ["-l"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.lintTask.enable": true
}
