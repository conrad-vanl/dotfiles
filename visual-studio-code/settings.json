{
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 15,
    "editor.lineHeight": 0,
    "editor.rulers": [80],
    "editor.tabSize": 2,
    "editor.fontLigatures": true,
    "editor.renderIndentGuides": true,
    "files.insertFinalNewline": false,
    "terminal.integrated.shellArgs.osx": ["-l"],
    "terminal.integrated.fontFamily": "Fira Code",
